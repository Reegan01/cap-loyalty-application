{
  "name": "first_project",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/http-client": "^4.3.1",
    "@sap-cloud-sdk/util": "^4.3.1",
    "@sap/cds": "^9",
    "@sap/low-code-event-handler": "^1.2.5",
    "@sap/xsenv": ">=3.3.2 <3.3.3",
    "@sap/xssec": "^4.12.1",
    "express": "^4",
    "hdb": "^2.26.4",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/dev-cap-tools": "^1.31.0"
  },
  "scripts": {
    "start": "cds-serve",
    "start-local": "npm run generate-entry-point && npm run cds-watch",
    "generate-entry-point": "dev-cap-tools gen-entrypoint",
    "cds-watch": "cds watch --open",
    "watch-first_project.purchases": "cds watch --open first_project.purchases/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-first_project.customers": "cds watch --open first_project.customers/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-first_project.redemptions": "cds watch --open first_project.redemptions/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "private": true,
  "cds": {
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "auth": {
        "[development]": {
          "kind": "dummy"
        },
        "[production]": {
          "kind": "xsuaa"
        }
      }
    }
  },
  "lcap": true,
  "sapux": [
    "app/first_project.purchases",
    "app/first_project.customers",
    "app/first_project.redemptions"
  ]
}
